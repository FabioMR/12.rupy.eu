<%= simple_form_for [:admin, @sponsor], :html => { :class => "form-horizontal" } do |f| %>

  <%= f.error_notification %>

  <%= f.association :event, :autofocus => true %>
  <%= f.association :sponsor_type %>
  <%= f.input :sequence, :input_html => { :class => "span1" } %>
  <%= f.input :name %>
  <%= f.input :description, :input_html => { :class => "span8", :rows => 4 } %>
  <%= f.input :website %>

  <div class="control-group auto-fill-file">
    <%= f.label :logo %>
    <div class="controls">
      <%= link_to "#" do %>
        <%= image_tag @sponsor.logo.url, :class => "img-polaroid" %>
      <% end %>
    </div>
    <div class="controls">
      <%= f.file_field :logo %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn-primary loading" %>
    <%= link_to 'Cancel', admin_sponsors_path, :class => "btn" %>
  </div>

<% end %>
