<div class="page-header">
  <h2>Listing events</h2>
</div>

<%= link_to 'New', new_admin_event_path, :class => 'btn btn-success btn-small btn-top' %>

<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each_with_index do |event, index| %>
      <tr>
        <td class="nowrap"><%= index.next %></td>
        <td><%= event.name %></td>
        <td class="nowrap">
          <div>
            <%= link_to 'Edit', [:edit, :admin, event], :class => 'btn btn-small' %>
            <%= link_to 'Destroy', [:admin, event], :class => 'btn btn-danger btn-small', :confirm => 'Tem certeza?', :method => :delete %>
            <%= link_to 'Inscriptions', [event.domain_locale, :event, :inscriptions], :class => 'btn btn-link btn-small' if event.domain_locale == "br" %>
          </div>
        </td>
      </tr>
    <% end %>
  <tbody>
</table>
